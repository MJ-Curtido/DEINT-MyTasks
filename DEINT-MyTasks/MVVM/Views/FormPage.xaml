<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DEINT_MyTasks.MVVM.Views.FormPage"
             Title="Añadir nueva tarea">
    <Grid RowDefinitions=".2*, .7*, .1*">
        <Entry Text="" Placeholder="Introduce Nueva Tarea/Categoría" Grid.Row="0" x:Name="txtTareaCategoria"/>

        <CollectionView ItemsSource="{Binding Categories}" Grid.Row="1">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <RadioButton Content ="{Binding TxtCategory}" Value="{Binding Id}" CheckedChanged="RadioButton_CheckedChanged" GroupName="rbtnCategorias"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="2" ColumnDefinitions="*, *">
            <Button Grid.Column="0" Text="Add Task" Clicked="Button_Clicked"/>
            <Button Grid.Column="1" Text="Add Category" Clicked="Button_Clicked_1"/>
        </Grid>
    </Grid>
</ContentPage>
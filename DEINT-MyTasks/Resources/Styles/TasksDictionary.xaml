<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <EllipseGeometry
        x:Key="Circulo"
        Center="50, 50"
        RadiusX="30"
        RadiusY="30"/>

    <Style x:Key="CircularButton" TargetType="Button">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="HeightRequest" Value="100"/>
        <Setter Property="WidthRequest" Value="100"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="Clip" Value="{StaticResource Circulo}"/>
    </Style>

    <Style x:Key="EntryCentrado" TargetType="Entry">
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="Placeholder" Value="Introduce Nueva Tarea"/>
        <Setter Property="FontSize" Value="Large"/>
    </Style>

    <Style x:Key="BotonesCentrados" TargetType="Button">
        <Setter Property="CornerRadius" Value="17"/>
    </Style>
</ResourceDictionary>